<%= link_to "All animals", "/animals"%><br>
<%= link_to "All farms", "/farms"%><br>
<%= link_to "New animal", "/farms/#{@farm.id}/animals/new" %><br>
<%= link_to "Sort animals alphabetically", :sort => "species" %>
    <%= form_tag("/farms/#{@farm.id}/animals", method: :get) do %>
    <p>Only Show Animals with weight greater than:
    <%= number_field_tag(:search, params[:search]) %>
    <%= submit_tag("Submit") %></p>
  <% end %>

<h1><%= @farm.name %></h1>
<% @animals.each do |animal| %>
  <h3><%=link_to animal.species, "/animals/#{animal.id}"%></h3>
  <p><%= link_to "edit #{animal.species}", "/farms/#{@farm.id}/animals/#{animal.id}/edit" %>
  <p>Height: <%= animal.height%> inches</p>
  <p>Weight: <%= animal.weight%> lbs</p>
  <p>Four Legged:<%= animal.four_legged%></p>
   <p><%= button_to "Delete #{animal.species}", "/animals/#{animal.id}", method: :delete %></p>
<% end %>
<p>Total animals for <%= @farm.name %>: <%= @farm.total_animals %></p>
